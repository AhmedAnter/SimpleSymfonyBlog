{% extends 'base.html.twig' %}

{% block body %}
    {# Display the specified article and its properties values #}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Written on {{ article.createdAt | date('d/m/Y') }} at {{ article.createdAt | date('H:i') }} in the category Politics</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            {{ article.content | raw }}
            <a href="{{ path('blog_delete', {'id': article.id}) }}" class="btn btn-danger">Delete</a>

        </div>
    </article>
{% endblock %}
